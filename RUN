#!/bin/bash
# shellcheck disable=SC1091,SC2154
. ./PKGBUILD && pacman -S --needed "${depends[@]}"
# update deps launch venv and run archinstall
if [ ! -d ".venv" ]; then
    python -m venv --system-site-packages .venv
    . .venv/bin/activate
    pip install -e ./archinstoo
else
    . .venv/bin/activate
fi

.venv/bin/python -B -m archinstall "$@"
